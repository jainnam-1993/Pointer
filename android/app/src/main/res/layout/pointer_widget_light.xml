<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background_light"
    android:gravity="center">

    <!-- Tradition badge -->
    <TextView
        android:id="@+id/widget_tradition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#666666"
        android:letterSpacing="0.15"
        android:textAllCaps="true"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/tradition_badge_background_light"
        android:visibility="gone" />

    <!-- Pointing content -->
    <TextView
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#1A1A1A"
        android:textStyle="italic"
        android:gravity="center"
        android:lineSpacingMultiplier="1.4"
        android:maxLines="6"
        android:ellipsize="end"
        android:text="Tap to receive today's pointing" />

    <!-- Teacher attribution -->
    <TextView
        android:id="@+id/widget_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#505050"
        android:layout_marginTop="12dp"
        android:visibility="gone" />

</LinearLayout>
