<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background_light"
    android:gravity="center">

    <!-- Tradition badge -->
    <TextView
        android:id="@+id/widget_tradition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#666666"
        android:letterSpacing="0.15"
        android:textAllCaps="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tradition_badge_background_light"
        android:visibility="gone" />

    <!-- Pointing content - simplified, no weight -->
    <TextView
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#1A1A1A"
        android:textStyle="italic"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:maxLines="5"
        android:ellipsize="end"
        android:text="Tap to open Pointer" />

    <!-- Teacher attribution -->
    <TextView
        android:id="@+id/widget_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#505050"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!-- Action buttons row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <!-- Refresh button -->
        <ImageView
            android:id="@+id/widget_refresh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_refresh_dark"
            android:contentDescription="Get new pointing" />

        <View
            android:layout_width="24dp"
            android:layout_height="1dp" />

        <!-- Save button -->
        <ImageView
            android:id="@+id/widget_save"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_bookmark_dark"
            android:contentDescription="Save pointing" />

    </LinearLayout>

</LinearLayout>
