<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background"
    android:gravity="center">

    <!-- Tradition badge -->
    <TextView
        android:id="@+id/widget_tradition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#B0B0B0"
        android:letterSpacing="0.15"
        android:textAllCaps="true"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/tradition_badge_background"
        android:visibility="gone" />

    <!-- Pointing content -->
    <TextView
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        android:gravity="center"
        android:lineSpacingMultiplier="1.4"
        android:maxLines="6"
        android:ellipsize="end"
        android:text="Tap to receive today's pointing" />

    <!-- Teacher attribution -->
    <TextView
        android:id="@+id/widget_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#A0A0A0"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!-- Action buttons row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <!-- Refresh button -->
        <ImageView
            android:id="@+id/widget_refresh"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_refresh"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Get new pointing"
            android:alpha="0.7" />

        <View
            android:layout_width="32dp"
            android:layout_height="1dp" />

        <!-- Save button -->
        <ImageView
            android:id="@+id/widget_save"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_bookmark"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Save pointing"
            android:alpha="0.7" />

    </LinearLayout>

</LinearLayout>
