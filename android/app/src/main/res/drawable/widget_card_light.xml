<?xml version="1.0" encoding="utf-8"?>
<!-- Light glassmorphism card matching app's PointerColors.light -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base: Apple-style gray background -->
    <item>
        <shape>
            <solid android:color="#F5F5F7" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Frosted glass overlay -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#E8FFFFFF"
                android:endColor="#CCFFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Subtle highlight at top -->
    <item android:top="1dp" android:left="8dp" android:right="8dp">
        <shape>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:endColor="#40FFFFFF" />
            <corners android:topLeftRadius="24dp" android:topRightRadius="24dp" />
            <size android:height="2dp" />
        </shape>
    </item>

    <!-- Glass border: subtle dark -->
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#15000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
