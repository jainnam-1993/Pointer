<?xml version="1.0" encoding="utf-8"?>
<!-- Light glassmorphism card - enhanced frosted glass effect -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base: Light frosted background -->
    <item>
        <shape>
            <solid android:color="#F8F8FA" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Frosted glass gradient -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#F0FFFFFF"
                android:centerColor="#D8FFFFFF"
                android:endColor="#E8FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Subtle warmth/depth gradient -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="300dp"
                android:centerX="70%"
                android:centerY="80%"
                android:startColor="#08000000"
                android:endColor="#00000000" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Top highlight - simulates light reflection -->
    <item android:top="1dp" android:left="16dp" android:right="16dp">
        <shape>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:endColor="#60FFFFFF" />
            <corners android:topLeftRadius="24dp" android:topRightRadius="24dp" />
            <size android:height="4dp" />
        </shape>
    </item>

    <!-- Glass border - subtle definition -->
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#20000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
