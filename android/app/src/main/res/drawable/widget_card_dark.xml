<?xml version="1.0" encoding="utf-8"?>
<!-- Dark glassmorphism card - clean glass effect without visible borders -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base: Deep dark background -->
    <item>
        <shape>
            <solid android:color="#0A0A12" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Glass gradient overlay - diagonal shimmer -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#10FFFFFF"
                android:centerColor="#05FFFFFF"
                android:endColor="#08FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Subtle purple/pink accent glow - no insets -->
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="300dp"
                android:centerX="30%"
                android:centerY="20%"
                android:startColor="#108B5CF6"
                android:endColor="#00000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Inner highlight - top edge glow - subtle -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:endColor="#0AFFFFFF" />
            <corners android:radius="24dp" />
            <size android:height="80dp" />
        </shape>
    </item>
</layer-list>
